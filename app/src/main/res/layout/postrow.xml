<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <RelativeLayout
        android:id="@+id/relativeLayoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoPerfilPost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/nombreUsuarioPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/fotoPerfilPost"
            android:text="username"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/ubicacionPostET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreUsuarioPost"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/fotoPerfilPost"
            android:text="location"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="normal">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutPhoto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/relativeLayoutInfo"
        >

        <ImageView
            android:id="@+id/imagenPublicacion"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerInParent="true"></ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayoutPhoto"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/nombreUsuarioAbajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/descripcionPostET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/nombreUsuarioAbajo"
            android:text="Here goes the caption..."
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/fechitaPostET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreUsuarioAbajo"
            android:layout_marginTop="5dp"
            android:text="date">


        </TextView>

    </RelativeLayout>


</RelativeLayout>